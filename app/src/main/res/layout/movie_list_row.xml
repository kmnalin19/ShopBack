<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
             android:id="@+id/movie_list_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             android:background="@color/cardview_dark_background"
              android:layout_margin="@dimen/activity_vertical_small_margin">


    <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp">

    <ImageView
            android:id="@+id/movie_list_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_vertical_small_margin"
            android:paddingRight="@dimen/activity_vertical_small_margin"
            android:translationZ="90dp"
            android:layout_alignParentBottom="true"
            android:background="#50000000"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/movie_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top|left"
                android:layout_marginBottom="8dp"
                android:textColor="#FFFFFF"/>


        <TextView
                android:id="@+id/movie_list_popularity"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/title_normal_text_size"
                android:paddingLeft="@dimen/activity_vertical_small_margin"
                android:gravity="bottom|right"
                android:layout_height="match_parent"/>

    </LinearLayout>

</RelativeLayout>